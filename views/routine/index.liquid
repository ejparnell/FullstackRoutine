{% layout 'layout.liquid'%}
{% block content %}

<header class="masthead">
  <div class="container h-100 py-5">
    <div class="row h-100 align-items-center">
      <div class="col-12 text-center">
        <h1>
          Welcome
          {{username}}
        </h1>
      </div>
    </div>
  </div>
</header>

<div class="container-xl h-100 d-flex" id="pageContainer">
  {%- comment -%}
  affirmation and weather container
  {%- endcomment -%}
  <div class="d-flex flex-column bd-highlight ">
    <div class=" bd-highlight"><img src="{{picture}}" class="" alt="{{altText}}"></div>
    <div class="p-1 bd-highlight">Weather</div>
  </div>
  {%- comment -%}
  card container
  {%- endcomment -%}


  {% for routine in routines %}
  <div class="container ">


    <div class="card rounded-4 col mb-2">
      <h5 class="card-body ">{{routine.title}}
        <span class="badge rounded-pill bg-secondary"> <a class="link-light" href="/routine/{{routine.id}}">
          View
        </a>  </span>
    </h5>
      {% for task in routine.listItems %}
      <ul class="list-group rounded-0">
        <li class="list-group-item border-1  align-items-center ps-4">
          {%if task.complete%}
          <s>{{task.task}}
          </s>
          {% else %}
          {{task.task}}
          {% endif %}
          {% if task.complete%}


          {%else%}
          <span class="badge bg-danger justify-item-flex-end">not done</span>
          {% endif %}
        </li>
      </ul>
      {% endfor %}
    </div>
      
    
  </div>
  {% endfor %}
</div>



{% endblock %}}