{% layout 'layout.liquid' %}
{% block content %}


<div class="container h-100 py-5">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col col-lg-8 col-xl-6">
      <form action="/task/{{ routine.id }}/{{theTask.id}}?_method=PUT" method="POST">
        <fieldset>
          <legend>Add a task to your routine</legend>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">To Do:</label>
            <div class="col-sm-9 mb-3">
              <input type="text" name="task" placeholder="enter task" class="form-control" value="{{theTask.task}}">
            </div>
          </div>

          <div class="form-group row">
            <label for="Type of Routine" class="col-sm-3 col-form-label">Type of Routine</label>
            <div class="col-sm-9 mb-3">
              <select class="form-control" id="exampleFormControlSelect1" name="type" value={{theTask.type}}>
                <option>{{theTask.type}}</option>
                <option>daily</option>
                <option>weekly</option>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Complete:</label>
            <div class="col-sm-9 mb-3">
              <input type="checkbox" name="complete" class="form-check-input" {% if theTask.complete %} checked {% endif
                %}>
            </div>
          </div>
        </fieldset>



        <input type="submit" value="Edit Your To-Do" class="btn btn-primary float-end">
      </form>
    </div>
  </div>
</div>

{% endblock %}}